{
  "$schema": "./node_modules/@angular/cli/lib/config/schema.json",
  "version": 1,
  "newProjectRoot": "projects",
  "projects": {
    "web-components": {
      "projectType": "library",
      "root": "projects/web-components",
      "sourceRoot": "projects/web-components/src",
      "prefix": "freud",
      "architect": {
        "build": {
          "builder": "@angular-devkit/build-angular:ng-packagr",
          "options": {
            "tsConfig": "projects/web-components/tsconfig.lib.prod.json",
            "project": "projects/web-components/ng-package.json"
          },
          "configurations": {
            "production": {
              "tsConfig": "projects/web-components/tsconfig.lib.prod.json"
            },
            "development": {
              "tsConfig": "projects/web-components/tsconfig.lib.json"
            }
          },
          "defaultConfiguration": "production"
        },
        "test": {
          "builder": "@angular-devkit/build-angular:karma",
          "options": {
            "main": "projects/web-components/src/test.ts",
            "tsConfig": "projects/web-components/tsconfig.spec.json",
            "karmaConfig": "projects/web-components/karma.conf.js"
          }
        }
      }
    },
    "freud-docs": {
      "projectType": "application",
      "root": "stories",
      "sourceRoot": "stories",
      "architect": {
        "build": {
          "builder": "@angular-devkit/build-angular:ng-packagr",
          "options": {
            "tsConfig": "tsconfig.json",
            "project": "ng-package.json"
          }
        },
        "storybook": {
          "builder": "@storybook/angular:start-storybook",
          "options": {
            "configDir": ".storybook",
            "browserTarget": "freud-docs:build",
            "port": 6006,
            "styles": ["./projects/web-components/scss/styles.scss"],
            "compodoc": true,
            "compodocArgs": [
              "-e",
              "json",
              "-d",
              "."
            ]
          }
        },
        "build-storybook": {
          "builder": "@storybook/angular:build-storybook",
          "options": {
            "configDir": ".storybook",
            "browserTarget": "freud-docs:build",
            "outputDir": "storybook-static",
            "styles": ["./projects/web-components/scss/styles.scss"],
            "compodoc": true,
            "compodocArgs": [
              "-e",
              "json",
              "-d",
              "."
            ]
          }
        }
      }
    }
  }
}
