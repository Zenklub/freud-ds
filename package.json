{
  "name": "root",
  "private": true,
  "scripts": {
    "bootstrap": "lerna bootstrap && lerna exec npm install",
    "build:tokens": "lerna run build --scope @freud-ds/tokens",
    "build:logos": "lerna run build --scope @freud-ds/logos",
    "build:icons": "lerna run build --scope @freud-ds/icons",
    "build:grid": "lerna run build --scope @freud-ds/grid",
    "build:web": "lerna run build --scope @freud-ds/web",
    "prepare": "husky install"
  },
  "dependencies": {},
  "devDependencies": {
    "@babel/core": "^7.12.9",
    "@babel/runtime": "^7.12.5",
    "@freud-ds/icons": "^2.1.1",
    "@freud-ds/tokens": "^2.0.7",
    "@types/jest": "^26.0.23",
    "@typescript-eslint/eslint-plugin": "^5.17.0",
    "@typescript-eslint/parser": "^5.17.0",
    "babel-jest": "^26.6.3",
    "eslint": "^7.32.0",
    "fs-extra": "^10.1.0",
    "husky": "^8.0.3",
    "jest": "^26.6.3",
    "lerna": "^6.0.3",
    "lint-staged": "^15.2.0",
    "typescript": "^4.4.4"
  },
  "lint-staged": {
    "packages/web/**/*": "prettier ./packages/web --write --ignore-unknown"
  }
}
